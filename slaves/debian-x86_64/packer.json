{
    "builders": [
        {
            "name": "debian-x86_64",

            "type": "qemu",
            "format": "qcow2",
            "accelerator": "kvm",
            "disk_size": "15000",
            "machine_type": "q35",

            "iso_url": "http://cdimage.debian.org/debian-cd/8.6.0/amd64/iso-cd/debian-8.6.0-amd64-netinst.iso",
            "iso_checksum": "9479c5c2df72ae3878116c43fb42eefae53d1fe363ce514a6afc8289064b9f5f",
            "iso_checksum_type": "sha256",

            "http_directory": "http_files",

            "ssh_username": "jenkins",
            "ssh_password": "{{user `password`}}",
            "ssh_wait_timeout": "60m",

            "shutdown_command": "echo '{{user `password`}}' | sudo -S shutdown -h now",

            "boot_wait": "2s",
            "boot_command": [
                "<esc><wait><wait>",
                "auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "passwd/user-password={{user `password`}} ",
                "passwd/user-password-again={{user `password`}} ",
                "<enter>"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo '{{user `password`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "script": "provision.sh",
            "environment_vars": [
                "JENKINS_SLAVE_COMMANDLINE={{user `jenkins_commandline`}}",
                "JENKINS_HOST={{user `jenkins_host`}}"
            ]
        }
    ]
}
